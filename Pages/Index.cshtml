@page
@model IndexModel
@{
    ViewData["Title"] = "Weather App";
}

<h1>Weather App</h1>

<form method="post">
    <div>
        <label for="location">Enter Location:</label>
        <input type="text" id="location" name="location" required />
    </div>
    <button type="submit">Get Weather</button>
</form>

@if (Model.WeatherData != null)
{
    <h2>Weather for @Model.WeatherData.Location.Name</h2>
    <p>Temperature: @Model.WeatherData.Current.Temp_C°C / @Model.WeatherData.Current.Temp_F°F</p>
    <p>Condition: @Model.WeatherData.Current.Condition.Text</p>
}
